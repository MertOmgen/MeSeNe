@page
<div class="container">
    <div id="newMessageArea" class="col-md-12" style="position: absolute; bottom: 10px;">
        <div class="row">
            <div class="col-md-5">
                <input type="text" class="form-control" id="userInput" placeholder="Name.." />
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <input type="text" class="form-control" id="messageInput"
                       placeholder="Messages.."></input>
            </div>
            <div class="col-md-2">
                <input type="button" id="sendButton" class="form-control btn btn-success" value="Send Message" onclick="clear">
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>


<div class="row " id="" style="display: table-cell; vertical-align: bottom; height: 100%; width: 100%; ">
    <div class="table-responsive-md" id="messageList" style="max-height: 800px; max-width: 1000px; overflow: auto;"></div>
</div>

<div id="mainDiv" style="display:none;height:100%">
    <div class="row">
        <div id="messageList" class="col-md-12">
        </div>
    </div>
</div>

<script src="~/js/SignalR/signalr.js"></script>
<script src="~/js/SignalR/chat.js"></script>
